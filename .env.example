# LLM Provider: "kimi" (default), "minimax", or "glm"
LLM_PROVIDER=kimi

# API keys (only the one for your chosen provider is needed)
MOONSHOT_API_KEY=your_moonshot_api_key_here
MINIMAX_API_KEY=your_minimax_api_key_here
GLM_API_KEY=your_glm_api_key_here

SEC_EDGAR_EMAIL=your_email@example.com

# HuggingFace token (optional, but recommended to avoid rate limits)
# Get one at: https://huggingface.co/settings/tokens
HF_TOKEN=

# PatentsView API key (required for patent data)
# Request at: https://patentsview-support.atlassian.net/servicedesk/customer/portal/1/group/1/create/18
# Rate limit: 45 requests/minute
PATENTSVIEW_API_KEY=

# StockTwits access token (API registration currently frozen)
# When available: https://api.stocktwits.com/developers
# Without this, StockTwits data is silently skipped.
STOCKTWITS_ACCESS_TOKEN=
